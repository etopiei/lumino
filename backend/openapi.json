    "tags": [],
    "paths": {
        "/route": {
            "post": {
                "summary": "Returns a route with safety information from a starting and finishing location.",
                "description": "This method will return a JSON object to the client describing the route, as well as the relevant safety information for each stop on the journey.",
                "parameters": [],
                "operationId": "",
                "responses": {
                    "default": {
                        "description": "Example Response"
                    }
                },
                "requestBody": {
                    "content": {
                        "*/*": {
                            "required": false,
                            "schema": {
                                "start": {
                                    "lat": "latitude",
                                    "lon": "longitude"
                                },
                                "destination": {
                                    "lat": "latitude",
                                    "lon": "longitude"
                                }
                            }
                        }
                    },
                    "required": true,
                    "description": "{\n    \"start\": {\"lat\": latitude, \"lon\": longitude},\n    \"destination\": {\"lat\": latitude, \"lon\": longitude}\n}"
                }
            }
        },
        "/safety": {
            "get": {
                "summary": "Get the safety information for a particular PTV stop.",
                "description": "This will fetch the safety information about a particular station.",
                "parameters": [
                    {
                        "name": "stopid",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "This is the ID of a stop on the PTV network to get the safety information about."
                    }
                ],
                "operationId": "",
                "responses": {
                    "200": {
                        "description": "An example response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "safety": {
                                        "s_index": {
                                            "safety_index": "\"0.30\""
                                        }
                                    },
                                    "meta": {
                                        "cctv": false,
                                        "toilet": true,
                                        "pay_phone": false,
                                        "indoor_waiting_area": true,
                                        "sheltered_waiting_area": false,
                                        "taxi_rank": false,
                                        "lighting": true,
                                        "waiting_room": true,
                                        "psos": true,
                                        "premium_stop": false,
                                        "travellers_aid": false,
                                        "kiosk": false
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {},
        "requestBodies": {
